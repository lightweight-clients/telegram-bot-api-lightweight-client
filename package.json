{
  "name": "@lightweight-clients/telegram-bot-api-lightweight-client",
  "version": "9.3.0",
  "description": "Lightweight Telegram Bot API client. Exports only minimal Fetch call. Fully compatible with AWS LLRT.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "telegram",
    "telegram bot",
    "telegram bot api",
    "bot",
    "fetch",
    "llrt",
    "async",
    "lightweight",
    "no-deps",
    "tree-shakeable",
    "esm"
  ],
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "updates:check": "npm-check-updates --errorLevel 2",
    "updates:fix": "npm-check-updates --upgrade",
    "lockfile": "npm install --lockfile-only --frozen-lockfile",
    "ts:check": "tsc --noEmit && tsc --project tsconfig.test.json --noEmit",
    "ts:build": "tsc",
    "knip": "knip",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --run",
    "full-check": "run-p lint knip updates:check ts:check && run-s test",
    "build": "tsc",
    "precommit": "run-s full-check lockfile",
    "prepack": "run-s full-check build"
  },
  "type": "module",
  "author": "lightweight-clients (https://github.com/lightweight-clients)",
  "license": "MIT",
  "homepage": "https://github.com/lightweight-clients/telegram-bot-api-lightweight-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightweight-clients/telegram-bot-api-lightweight-client"
  },
  "bugs": {
    "url": "https://github.com/lightweight-clients/telegram-bot-api-lightweight-client/issues"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "knip": "^5.78.0",
    "npm-check-updates": "^19.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "schema_version": "9.3.0+20260101202551"
}
